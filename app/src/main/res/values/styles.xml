<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#d32f2f</item>
        <item name="colorControlActivated">#FD0303</item>
        <item name="colorControlHighlight">#f44336</item>
    </style>

    <!-- Style the font. -->
    <style name="RepresentationTextStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize the first page representation -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!-- Style the font. -->
    <style name="LifeTotalStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize the first page representation -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@drawable/gradient</item>
        <item name="android:shape">oval</item>
        <item name="android:textColor">@color/warningPrimary</item>
    </style>

    <!-- Style the font. -->
    <style name="ButtonStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize the first page representation -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">2dp</item>
    </style>

    <!-- Drawing attention to specific buttons. -->
    <style name="WarningTextStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/warningPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- Notes text styling -->
    <style name="NotesStyleText" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize the first page representation -->
        <item name="android:textColor">@color/notesPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!-- Notes details styling -->
    <style name="NoteDetailsStyleText" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize the first page representation -->
        <item name="android:textColor">@color/notesPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginLeft">7dp</item>
    </style>

    <!-- Main activity buttons styling -->
    <style name="MainPageButtons" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/notesPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:shadowColor">@color/notesPrimary</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
</resources>
